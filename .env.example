# ⚠️ Скопируйте этот файл в .env и настройте под свою среду.
# ⚠️ Для dev: запуск через ./start.sh
# ⚠️ Для prod: убедитесь, что все значения безопасны и соответствуют prod-серверу.

# =============== Laravel ===============
APP_NAME=Laravel
APP_ENV=local              # local, production
APP_KEY=                   # будет сгенерирован скриптом
APP_DEBUG=true             # true для dev, false для prod
APP_URL=http://localhost

# =============== База данных ===============
DB_CONNECTION=mysql
DB_HOST=mysql              # имя сервиса в docker-compose
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

# =============== Redis ===============
REDIS_HOST=redis           # имя сервиса
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============== RabbitMQ ===============
RABBITMQ_HOST=rabbitmq     # имя сервиса
RABBITMQ_PORT=5672
RABBITMQ_USER=guest        # для dev, в prod замените!
RABBITMQ_PASSWORD=guest    # для dev, в prod замените!
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=statistics

# =============== Reverb (WebSockets) ===============
BROADCAST_DRIVER=reverb
REVERB_APP_ID=chatapp
REVERB_APP_KEY=chatappkey
REVERB_APP_SECRET=chatappsecret
REVERB_HOST=websockets     # в dev — localhost, в prod — laravel_websockets
REVERB_PORT=6001
REVERB_SCHEME=http

# =============== Очереди и кэш ===============
QUEUE_CONNECTION=rabbitmq  # или redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# =============== Mail (dev) ===============
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============== PHPMyAdmin ===============
PMA_HOST=mysql

# =============== MySQL root (для phpMyAdmin) ===============
MYSQL_ROOT_PASSWORD=root

# Переменные для Vue.js
VITE_API_URL=http://localhost/api